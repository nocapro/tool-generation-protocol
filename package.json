  "author": "arman@noca.pro",
  "repository": {
    "type": "git",
    "url": "https://github.com/nocapro/tool-generation-protocol.git"
  },
  "bugs": {
    "url": "https://github.com/nocapro/tool-generation-protocol/issues"
  },
