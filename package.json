  "license": "MIT",
  "bin": {
    "tgp": "./bin/tgp.js"
  },
  "dependencies": {
    "apply-multi-diff": "^0.1.4",
    "esbuild": "^0.19.12",
    "isolated-vm": "^6.0.2",
    "isomorphic-git": "^1.35.1",
    "typescript": "^5.6.2",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.22.4"
  },
  "devDependencies": {
    "tsup": "^8.0.2",
    "ai": "5.0.104",
    "@types/node": "^20.19.25",
    "@types/better-sqlite3": "^7.6.9",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "better-sqlite3": "^9.4.3",
    "eslint": "^9.39.1",
    "tsx": "^4.16.2",
    "bun-types": "^1.1.12"
  }
